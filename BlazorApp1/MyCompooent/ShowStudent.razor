@page "/Showstudent"

<h3 class="mb-3">📘 Students by Department</h3>

<div class="mb-3">
    <label class="form-label">Select Department:</label>
    <select class="form-select" @onchange="OnDepartmentChanged">
        <option value="">-- Choose Department --</option>
        @foreach (var dept in Depats)
        {
            <option value="@dept.Id">@dept.Name</option>
        }
    </select>
</div>

@if (FilteredStudents != null && FilteredStudents.Any())
{
    <h5>Students in Selected Department:</h5>
    <ul class="list-group">
        @foreach (var student in FilteredStudents)
        {
            <li class="list-group-item">
                <b>@student.Name</b> — @student.Address
            </li>
        }
    </ul>
}
else if (SelectedDepartId != 0)
{
    <p class="text-muted">No students found in this department.</p>
}

